@model List<ProjectTest1.Models.ProductModel>
@{
    var currentPage = (int?)ViewBag.CurrentPage;
    var totalPages = (int?)ViewBag.TotalPages;

}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="ratio ratio-1x1">
                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@item.Id">
                        <img src="@(item.Img)" class="card-img-top" alt="@item.Name" style="object-fit: cover;">
                    </a>
                </div>

                <div class="card-body d-flex flex-column">
                    <h6 class="card-title fw-semibold text-primary mb-2">@item.Name</h6>
                    <p class="card-text text-muted small mb-2">
                        @(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                    </p>
                    <div class="mt-auto">
                        <p class="text-danger fw-bold mb-0">
                            @String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", item.Price)
                        </p>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination placed outside the loop -->
<div class="pagination d-flex justify-content-center gap-2 mt-4">
    @if (ViewBag.CurrentPage <= 1)
    {
        <span class="btn btn-outline-primary disabled">Pre →</span>
    }
    else
    {
        <a href="#" onclick="loadData(@(ViewBag.CurrentPage - 1))" class="btn btn-outline-primary">Pre →</a>
    }

    @if (ViewBag.CurrentPage >= ViewBag.TotalPages)
    {
        <span class="btn btn-outline-primary disabled">Next →</span>
    }
    else
    {
        <a href="#" onclick="loadData(@(ViewBag.CurrentPage + 1))" class="btn btn-outline-primary">Next →</a>
    }
</div>
