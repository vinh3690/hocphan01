@model List<ProjectTest1.Models.CategoryModel>
@{
    ViewData["Title"] = "Quản lý danh mục";
}

<h2>Quản lý danh mục</h2>

<div class="mb-3">
    <form id="filterForm" method="get">
        <div class="row g-2 align-items-center">
            <div class="col-md-3">
                <input type="text" name="keySearch" class="form-control" placeholder="Tìm theo tên" />
            </div>
            <div class="col-md-2">
                <select name="status" class="form-select">
                    <option value="0">-- Trạng thái --</option>
                    <option value="1">Kích hoạt</option>
                    <option value="2">Vô hiệu</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary" onclick="category.loadCategoryData(1)">Tìm kiếm</button>
            </div>
        </div>
    </form>
</div>

<div class="mb-3">
    <button class="btn btn-success" onclick="category.openCreateModal()">Thêm mới</button>
    <button class="btn btn-danger" onclick="category.deleteAll()">Xoá nhiều</button>
</div>

<div class="body">
    <div class="table-responsive" id="gridData">
    </div>
</div>
<div id="modal-placeholder"></div>

@section Scripts {
    <script src="~/js/category.js"></script>
}