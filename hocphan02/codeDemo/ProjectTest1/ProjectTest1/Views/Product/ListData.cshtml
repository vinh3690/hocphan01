@model List<ProjectTest1.ViewModels.ProductViewModel>
@{
    var stt = 0;
}

<table class="table table-bordered table-hover mt-4" id="listData">
    <thead class="table-dark text-center align-middle">
        <tr>
            <th><input type="checkbox" id="check-all" /></th>
            <th>#</th>
            <th>Ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" class="select-checkbox" value="@item.Id" />
                    </td>
                    <td>@(++stt)</td>
                    <td class="text-center align-middle">
                        @if (!string.IsNullOrEmpty(item.Img))
                        {
                            <img src="@item.Img" alt="Ảnh" width="100" height="100" style="object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có</span>
                        }
                    </td>

                    <td>@item.Name</td>
                   
                    <td>@item.Price.ToString("N0") ₫</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <button onclick="product.changeStatus(@item.Id)" class="btn btn-success btn-sm">
                                Kích hoạt
                            </button>

                        }
                        else
                        {
                            <button onclick="product.changeStatus(@item.Id)" class="btn btn-warning btn-sm">
                                Vô hiệu
                            </button>
                        }
                    </td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-info" onclick="product.detail(@item.Id)">
                            <i class="bi bi-eye"></i>
                        </button>
                        <a onclick="product.edit(@item.Id)" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a onclick="product.remove(@item.Id)" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-muted">Không có sản phẩm nào.</td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-between align-items-center mt-3">
    <div>
        Tổng số bản ghi: <strong>@ViewBag.Total</strong>
    </div>
    <div id="pagination" data-total-pages="@ViewBag.totalPage">
        <ul id="paging-ul" class="pagination pagination-sm"></ul>
    </div>

</div>

<script>
    document.getElementById('check-all')?.addEventListener('change', function () {
        const isChecked = this.checked;
        document.querySelectorAll('.select-checkbox').forEach(cb => cb.checked = isChecked);
    });

</script>
