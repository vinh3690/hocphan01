@model ProjectTest1.ViewModels.ProductViewModel

<div class="modal fade" id="productDetailModal" tabindex="-1" aria-labelledby="productDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">📄 Chi tiết sản phẩm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        <input type="text" class="form-control" value="@Model.Name" readonly>
                    </div>
                   
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Danh mục cấp 1</label>
                        <input type="text" class="form-control" value="@Model.SelectedCategoryLevel1Name" readonly>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Danh mục cấp 2</label>
                        <input type="text" class="form-control" value="@Model.SelectedCategoryLevel2Name" readonly>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Danh mục cấp 3</label>
                        <input type="text" class="form-control" value="@Model.SelectedCategoryLevel3Name" readonly>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Giá (VNĐ)</label>
                        <input type="text" class="form-control" value="@Model.Price.ToString("N0")" readonly>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Trạng thái</label>
                        <input type="text" class="form-control" value="@(Model.IsActive ? "Hiển thị" : "Ẩn")" readonly>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea class="form-control" rows="3" readonly>@Model.Description</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ảnh chính</label><br>
                    <img src="@Model.Img" style="max-width:200px;" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Ảnh phụ</label>
                    <div class="d-flex flex-wrap">
                        @if (Model.SubImages != null && Model.SubImages.Any())
                        {
                            foreach (var img in Model.SubImages)
                            {
                                <img src="@img" style="max-width:100px; margin-right:5px; margin-bottom:5px;" />
                            }
                        }
                        else
                        {
                            <p>Không có ảnh phụ</p>
                        }
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
